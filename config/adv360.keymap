    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp EQUAL          &kp N1           &kp N2              &kp N3            &kp N4  &kp N5    &mo 3                                                               &mo 3  &kp N6             &kp N7       &kp N8                &kp N9                   &kp N0  &kp MINUS
  &kp TAB           &kp Q            &kp W             &lt 2 E             &kp R   &kp T    &none                                                               &none   &kp Y              &kp U      &lt 2 I                 &kp O                    &kp P   &kp BSLH
